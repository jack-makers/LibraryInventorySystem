@model IEnumerable<Inventory>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="colo-6">
            <h2 class="text-dark">Current Inventory</h2>
        </div>
        <div class="colo-6 text-end">
            <a asp-controller="Inventory" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-patch-plus-fill"></i> &nbsp; Add to Inventory
            </a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
    <tr>
        <th>
            Book Title
        </th>
        <th>
            Author Name
        </th>
        <th>
            ISBN
        </th>
        <th></th>
    </tr>

    </thead>
    <tbody>
    @foreach (var obj in Model)
    {
        <tr>
            <td width:50%>
                @obj.BookTitle
            </td>
            <td width:50%>
                @obj.AuthorName
            </td>
            <td width:30%>
                @obj.Isbn
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Inventory" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>Edit</a>
                    <a asp-controller="Inventory" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger"> <i class="bi bi-trash3"></i>Delete</a>
                </div>
            </td>
        </tr>
    }

    </tbody>
</table>